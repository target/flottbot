{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "golang": {
    "postUpdateOptions": [
      "gomodTidy",
      "gomodUpdateImportPaths"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "digest",
        "patch",
        "pin"
      ],
      "groupName": "mergeable deps",
      "automerge": true
    }
  ]
}
